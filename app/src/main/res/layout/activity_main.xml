<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9DE"
    android:orientation="vertical"
    android:padding="12dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:background="@drawable/screen_bg"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="12dip">

        <TextView
            android:id="@+id/show_result_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="#4d4d4d"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/show_input_tv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="start"
            android:gravity="center_vertical|right"
            android:textColor="#4d4d4d"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="64dip"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Col2Style"
            android:orientation="horizontal">

            <Button
                android:id="@+id/multiply_btn"
                style="@style/Button5Style"
                android:text="@string/multply"
                android:textColor="#535353" />

            <Button
                android:id="@+id/divide_btn"
                style="@style/Button5Style"
                android:text="@string/divide"
                android:textColor="#535353" />

            <Button
                android:id="@+id/del_btn"
                style="@style/Button5Style"
                android:text="Del"
                android:textColor="#535353" />

            <Button
                android:id="@+id/c_btn"
                style="@style/Button5Style"
                android:text="C"
                android:textColor="#9bcebf" />
        </LinearLayout>

        <LinearLayout
            style="@style/Col2Style"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sub_btn"
                style="@style/Button5Style"
                android:text="@string/sub" />

            <Button
                android:id="@+id/nine_btn"
                style="@style/Button3Style"
                android:text="@string/nine"
                android:textColor="#535353" />

            <Button
                android:id="@+id/eight_btn"
                style="@style/Button3Style"
                android:text="@string/eight"
                android:textColor="#535353" />

            <Button
                android:id="@+id/seven_btn"
                style="@style/Button3Style"
                android:text="@string/seven"
                android:textColor="#535353" />

        </LinearLayout>

        <LinearLayout
            style="@style/Col2Style"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_btn"
                style="@style/Button5Style"
                android:text="@string/add"
                android:textColor="#535353" />

            <Button
                android:id="@+id/six_btn"
                style="@style/Button3Style"
                android:text="@string/six"
                android:textColor="#535353" />

            <Button
                android:id="@+id/five_btn"
                style="@style/Button3Style"
                android:text="@string/five"
                android:textColor="#535353" />

            <Button
                android:id="@+id/four_btn"
                style="@style/Button3Style"
                android:text="@string/four"
                android:textColor="#535353" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/equal_btn"
                style="@style/Button4Style"
                android:text="@string/equal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/three_btn"
                        style="@style/Button3Style"
                        android:text="@string/three"
                        android:textColor="#535353" />

                    <Button
                        android:id="@+id/two_btn"
                        style="@style/Button3Style"
                        android:text="@string/two"
                        android:textColor="#535353" />

                    <Button
                        android:id="@+id/one_btn"
                        style="@style/Button3Style"
                        android:text="@string/one"
                        android:textColor="#535353" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/point_btn"
                        style="@style/Button3Style"
                        android:layout_weight="2"
                        android:text="@string/point"
                        android:textColor="#535353" />

                    <Button
                        android:id="@+id/zero_btn"
                        style="@style/Button3Style"
                        android:text="@string/zero"
                        android:textColor="#535353" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>